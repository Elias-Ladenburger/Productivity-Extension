{
  "manifest_version": 3,
  "name": "ProdBoost",
  "description": "An extension for Firefox (potentially Chromium-based browsers as well) to enhance productivity ",
  "version": "1.0",
  "author": "prodboost@eliasladenburger.com",
  "homepage_url": "https://github.com/Elias-Ladenburger/Productivity-Extension",

  "icons": {
    "16": "icons/bolt-solid.png",
    "48": "icons/bolt-solid.png",
    "96": "icons/bolt-solid.png",
    "128": "icons/bolt-solid.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage",
    "tabs",
    "contextMenus",
    "webNavigation",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": [
        "persistance/persistance.js",
        "content-scripts/productivity.js",
        "domain/action.js"
      ]
    }
  ],

  "options_ui": {
    "page": "ui/options.html",
    "browser_style": true,
    "open_in_tab": true
  },

  "action": {
    "default_icon": "icons/bolt-solid.png",
    "default_title": "Productivity Booster",
    "default_popup": "popup/prod_booster.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["common/*", "public/*", "icons/*"],
      "matches": ["*://*/*"]
    }
  ]
}
